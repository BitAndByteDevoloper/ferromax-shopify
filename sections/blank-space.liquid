{% comment %}
  Archivo: sections/blank-space.liquid
  Sección para dejar esapacios en blanco en el diseño
{% endcomment %}

<link rel="stylesheet" href="{{ 'section-icons-benefits.css' | asset_url }}">

<section class="bb-benefits" id="bb-benefits-{{ section.id }}">
  <div class="bb-benefits__inner page-width">
    {% if section.settings.heading != blank %}
      <h2 class="bb-benefits__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="bb-benefits__grid">
      {%- for block in section.blocks -%}
        <div class="bb-benefit" {{ block.shopify_attributes }}>
          {%- if block.settings.link_url != blank -%}
            <a class="bb-benefit__link" href="{{ block.settings.link_url }}" {% if section.settings.link_target_blank %}target="_blank" rel="noopener"{% endif %}>
          {%- endif -%}

          <div class="bb-benefit__icon" aria-hidden="true">
            {%- if block.settings.svg_code != blank -%}
              <div class="bb-svg-wrapper">
                {{ block.settings.svg_code }}
              </div>
            {%- elsif block.settings.icon_image != blank -%}
              {%- assign img = block.settings.icon_image -%}
              <img
                src="{{ img | image_url: width: 256 }}"
                width="{{ img.width }}"
                height="{{ img.height }}"
                loading="lazy"
                alt="{{ block.settings.icon_alt | escape }}"
              >
            {%- else -%}
              <div class="bb-placeholder"></div>
            {%- endif -%}
          </div>

          <div class="bb-benefit__text">
            {% if block.settings.title != blank %}
              <div class="bb-benefit__title">{{ block.settings.title }}</div>
            {% endif %}
            {% if block.settings.subtitle != blank %}
              <div class="bb-benefit__subtitle">{{ block.settings.subtitle }}</div>
            {% endif %}
          </div>

          {%- if block.settings.link_url != blank -%}
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Icons / Benefits",
  "settings": [
    { "type": "text", "id": "heading", "label": "Title (optional)", "default": "" },

    { "type": "font_picker", "id": "font_picker", "label": "Font", "default": "system" },
    { "type": "color", "id": "text_color", "label": "Text & icon color", "default": "#222222" },
    { "type": "color", "id": "bg_color", "label": "Background color", "default": "#ffffff" },

    { "type": "range", "id": "icon_size", "label": "Icon size (px)", "min": 20, "max": 120, "step": 2, "default": 36 },
    { "type": "range", "id": "title_size", "label": "Title size (px)", "min": 10, "max": 36, "step": 1, "default": 16 },
    { "type": "range", "id": "subtitle_size", "label": "Subtitle size (px)", "min": 10, "max": 28, "step": 1, "default": 14 },

    { "type": "range", "id": "grid_gap", "label": "Column spacing (px)", "min": 0, "max": 48, "step": 2, "default": 24 },

    { "type": "range", "id": "pad_y", "label": "Vertical padding (px)", "min": 0, "max": 120, "step": 4, "default": 32 },
    { "type": "range", "id": "pad_x", "label": "Horizontal padding (px)", "min": 0, "max": 120, "step": 4, "default": 0 },

    {
      "type": "select",
      "id": "align",
      "label": "Block alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "select",
      "id": "item_align",
      "label": "Item alignment",
      "default": "center",
      "options": [
        { "value": "flex-start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Right" }
      ]
    },

    { "type": "range", "id": "columns_desktop", "label": "Columns on desktop", "min": 2, "max": 6, "step": 1, "default": 4 },
    { "type": "range", "id": "columns_tablet", "label": "Columns on tablet", "min": 1, "max": 4, "step": 1, "default": 3 },
    { "type": "range", "id": "columns_mobile", "label": "Columns on mobile", "min": 1, "max": 3, "step": 1, "default": 2 },

    { "type": "checkbox", "id": "link_target_blank", "label": "Open links in new tab", "default": false }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Icon + Text",
      "settings": [
        { "type": "image_picker", "id": "icon_image", "label": "Icon as image (PNG/SVG/JPG)" },
        { "type": "textarea", "id": "svg_code", "label": "Paste SVG (optional)", "default": "" },
        { "type": "text", "id": "icon_alt", "label": "Icon alt text", "default": "" },

        { "type": "text", "id": "title", "label": "Title", "default": "Free Shipping" },
        { "type": "text", "id": "subtitle", "label": "Subtitle (optional)", "default": "" },

        { "type": "url", "id": "link_url", "label": "Link (optional)", "default": "" }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Icons / Benefits",
      "category": "Sections",
      "blocks": [
        { "type": "benefit", "settings": { "title": "Free Shipping" } },
        { "type": "benefit", "settings": { "title": "Warranty" } },
        { "type": "benefit", "settings": { "title": "Secure Payments" } },
        { "type": "benefit", "settings": { "title": "Personalized Support" } }
      ]
    }
  ]
}
{% endschema %}